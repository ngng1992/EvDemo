<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_sign">

    </ImageView>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:text="@string/str_join_login"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_32"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/str_email"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_16">

        </TextView>


        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@null"
            android:hint="@string/toast_input_email"
            android:inputType="textEmailAddress"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:textColor="@color/gray1e"
            android:textColorHint="@color/gray99"
            android:textSize="@dimen/sp_16">

        </EditText>

        <View
            style="@style/ViewLine"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_16">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/str_pwd"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_16">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/toast_input_login_pwd"
                android:inputType="textPassword"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:textColor="@color/gray1e"
                android:textColorHint="@color/gray99"
                android:textSize="@dimen/sp_16">

            </EditText>

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_forget_pwd"
                android:textColor="@color/gray99"
                android:textSize="@dimen/sp_12">

            </TextView>

        </LinearLayout>

        <View
            style="@style/ViewLine"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_16">

        </View>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_yellowd2_corner24"
            android:gravity="center"
            android:text="@string/str_login"
            android:textColor="@color/whiteff"
            android:textSize="@dimen/sp_16">

        </TextView>

        <TextView
            android:id="@+id/tv_fingerprint_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_yellowd2_frame_corner24"
            android:gravity="center"
            android:text="@string/str_fingerprint_login"
            android:textColor="@color/yellowd2"
            android:textSize="@dimen/sp_16">

        </TextView>

        <TextView
            android:id="@+id/tv_new_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/str_new_register"
            android:textColor="@color/gray68"
            android:textSize="@dimen/sp_14">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_social_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/vpage_social_one"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_2"
                android:alpha="1"
                android:background="@color/yellowd2">

            </View>

            <View
                android:id="@+id/vpage_social_two"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_8"
                android:alpha="0.3"
                android:background="@color/yellowd2">

            </View>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_social_login"
            android:textColor="@color/gray68"
            android:textSize="@dimen/sp_14">

        </TextView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_social_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16">

        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>


</RelativeLayout>