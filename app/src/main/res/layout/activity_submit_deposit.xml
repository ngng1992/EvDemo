<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_signup">

    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:src="@drawable/ic_gray33_left_back11">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/sec_acc_ui_title"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_18"
            android:visibility="gone">

        </TextView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@+id/rl_title"
        android:src="@mipmap/img_monkey"
        android:layout_height="wrap_content">

    </ImageView>

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:layout_below="@+id/iv_success"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/gray1e"
        android:text="@string/asd_transfer_accounts"
        android:layout_height="wrap_content">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_online_deposit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_below="@+id/tv_success"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardElevation="@dimen/dp_4"
        app:cardBackgroundColor="@color/whiteff"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_16"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_online_deposit"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_deposit"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_online_deposit"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/iv_online_deposit"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray1e"
                android:text="@string/asd_online_deposit"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tv_online_deposit_desc"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_below="@+id/tv_online_deposit"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@+id/iv_online_deposit"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray999"
                android:text="@string/asd_online_deposit_desc"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_dropbox"
                android:layout_height="wrap_content">

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_cheque"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@+id/cd_online_deposit"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardElevation="@dimen/dp_4"
        app:cardBackgroundColor="@color/whiteff"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_16"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_cheque"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_cheque"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_cheque"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/iv_cheque"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray1e"
                android:text="@string/asd_cheque"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tv_cheque_desc"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_below="@+id/tv_cheque"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@+id/iv_cheque"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray999"
                android:text="@string/asd_cheque_desc"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_dropbox"
                android:layout_height="wrap_content">

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_arrange"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@+id/cd_cheque"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardElevation="@dimen/dp_4"
        app:cardBackgroundColor="@color/whiteff"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp_16"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_arrange"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_arrange"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:id="@+id/tv_arrange"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/iv_arrange"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/gray1e"
                android:text="@string/ard_appointment_witness"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/tv_arrange_desc"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_below="@+id/tv_arrange"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@+id/iv_arrange"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray999"
                android:text="@string/asd_arrange_desc"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_dropbox"
                android:layout_height="wrap_content">

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>