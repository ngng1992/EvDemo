<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlPop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_pop" >

        <com.mfinance.everjoy.app.widget.FontFitTextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/title_withdrawal_history_detail"
            android:textColor="@color/normal_text"
            android:textSize="17dp" >
        </com.mfinance.everjoy.app.widget.FontFitTextView>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView01"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" >

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_cashmovement_ref"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvRef"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" >
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_cashmovement_last_update_by"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvCashMovementHistoryLastUpdateBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" >
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_cashmovement_bank_name"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvBankname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" >

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_cashmovement_bank_account"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvBankaccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" >
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_cashmovement_amount"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" >

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_cashmovement_status"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp" >

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_cashmovement_request_date"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvReqdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text" >
                </com.mfinance.everjoy.app.widget.FontFitTextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >
            <Button
                android:id="@+id/btnCancelCashMovement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_submit"
                android:text="@string/txt_btnCancelCashMovement"
                android:textColor="@color/btn_2"
                android:textSize="16dp"></Button>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_close" >
    </Button>

</RelativeLayout>