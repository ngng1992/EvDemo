<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_signup">

    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:src="@drawable/ic_gray33_left_back11">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/sec_acc_ui_title"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_18">

        </TextView>

    </RelativeLayout>

    <com.mfinance.everjoy.everjoy.view.AccountStepView
        android:id="@+id/ll_account_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal"
        app:selectIndex="2">

    </com.mfinance.everjoy.everjoy.view.AccountStepView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_account_step"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/bg_whiteff_top_corner24"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="170dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/ard_risk_statement"
                    android:textColor="@color/gray1e"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <TextView
                    android:id="@+id/tv_risk_statement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="风险披露内容（纯文字）需要提供风险披露内容"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </TextView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_prev"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellowfa_corner24"
                    android:gravity="center"
                    android:text="@string/ui_prev"
                    android:textColor="@color/yellowd2"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:background="@drawable/bg_yellowd2_corner24"
                    android:gravity="center"
                    android:text="@string/sec_acc_ui_next"
                    android:textColor="@color/whiteff"
                    android:textSize="@dimen/sp_16">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_appointment_witness"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/bg_yellowd2_frame_corner24"
                android:gravity="center"
                android:text="@string/ard_appointment_witness"
                android:textColor="@color/yellowd2"
                android:textSize="@dimen/sp_16">

            </TextView>

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/sec_acc_ui_contact"
                android:textColor="@color/gray68"
                android:textSize="@dimen/sp_14">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_account_step"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardBackgroundColor="@color/whiteff"
        app:cardCornerRadius="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_8"
                    android:src="@mipmap/demo_ppl">

                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_licensees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ard_licensees"
                        android:textColor="@color/gray1e"
                        android:textSize="@dimen/sp_14">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_licensees_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/ard_licensees_name"
                        android:textColor="@color/gray68"
                        android:textSize="@dimen/sp_14">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_licensees_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ard_licensees_code"
                        android:textColor="@color/gray1e"
                        android:textSize="@dimen/sp_14">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_licensees_code_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/ard_licensees_code_name"
                        android:textColor="@color/gray68"
                        android:textSize="@dimen/sp_14">

                    </TextView>


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:src="@mipmap/btn_play">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <SeekBar
                        android:id="@+id/sb_play_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:duplicateParentState="false"
                        android:max="100"
                        android:maxHeight="3dp"
                        android:minHeight="3dp"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_12"
                        android:progressDrawable="@drawable/bg_music_seekbar"
                        android:splitTrack="false"
                        android:thumb="@drawable/seekbar_thumb"
                        android:thumbOffset="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8">

                        <TextView
                            android:id="@+id/tv_play_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:text="00:00"
                            android:textColor="@color/gray33"
                            android:textSize="@dimen/sp_14"
                            android:visibility="gone">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:text="00:00"
                            android:textColor="@color/gray1e"
                            android:textSize="@dimen/sp_14"
                            android:visibility="gone">

                        </TextView>

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:background="@drawable/bg_yellowd2_corner24"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="2X"
                    android:textColor="@color/whiteff"
                    android:textSize="@dimen/sp_14">

                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/ard_tips"
                android:textColor="@color/gray68"
                android:textSize="@dimen/sp_12">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>