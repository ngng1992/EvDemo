<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:id="@+id/rlTitle" android:layout_width="fill_parent"
			android:background="@drawable/title_bg" android:layout_height="37dp">
	<TextView android:textColor="@color/normal_text" android:textStyle="bold"
				android:textSize="18dp" android:shadowColor="#000000"
				android:shadowDx="1.5" android:shadowDy="1.5" android:shadowRadius="1.5"
				android:layout_width="wrap_content" android:id="@+id/tvTitle"
				android:text="title" android:layout_centerInParent="true" android:layout_height="fill_parent" android:gravity="center"></TextView>
</RelativeLayout>