<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_signup">

    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:src="@drawable/ic_gray33_left_back11">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/sec_acc_ui_title"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_18">

        </TextView>

    </RelativeLayout>

    <com.mfinance.everjoy.everjoy.view.AccountStepView
        android:id="@+id/ll_account_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

    </com.mfinance.everjoy.everjoy.view.AccountStepView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_account_step"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_whiteff_top_corner24"
        android:orientation="vertical">

        <net.mfinance.commonlib.view.LineStepView
            android:id="@+id/ll_step_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            app:lineCount="4"
            app:lineHeight="@dimen/dp_2"
            app:linePadding="@dimen/dp_4"
            app:lineSelectBgColor="@color/yellowd2"
            app:lineUnSelectAlpha="0.3"
            app:lineWidth="@dimen/dp_12">

        </net.mfinance.commonlib.view.LineStepView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="@string/af_revenue"
                    android:textColor="@color/gray1e"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finYearRevenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_annual_income"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finNetAssetValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_asset_value"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finResidType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_house"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finCapitalSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_source_funds"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finAssetType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_funds_type"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finInvestTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_investment_target"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finTolerateRisk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_taking_risks"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>


                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finInvestAvgYearValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_investment_quota"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="@string/af_investment_experience"
                    android:textColor="@color/gray1e"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finExpStockYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_shares"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finExpDerivativeYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_derivatives"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>


                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finExpFutureYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_futures_options"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finExpForexYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_forex_precious"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finExpBondYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_bonds_certificates"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finExpFoundYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_unit_fund"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_finExpOtherYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_other"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="@string/af_derivative"
                    android:textColor="@color/gray1e"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_derivative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/af_derivative"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_prev"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/bg_yellowfa_corner24"
                    android:gravity="center"
                    android:text="@string/ui_prev"
                    android:textColor="@color/yellowd2"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/bg_yellowd2_corner24"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:text="@string/sec_acc_ui_next"
                    android:textColor="@color/whiteff"
                    android:textSize="@dimen/sp_16">

                </TextView>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/sec_acc_ui_contact"
                android:textColor="@color/gray68"
                android:textSize="@dimen/sp_14">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>