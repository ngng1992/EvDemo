<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_signup">

    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:src="@drawable/ic_gray33_left_back11">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/sec_acc_ui_title"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_18">

        </TextView>

    </RelativeLayout>

    <com.mfinance.everjoy.everjoy.view.AccountStepView
        android:id="@+id/ll_account_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal"
        app:selectIndex="1">

    </com.mfinance.everjoy.everjoy.view.AccountStepView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_account_step"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_whiteff_top_corner24"
        android:orientation="vertical">

        <net.mfinance.commonlib.view.LineStepView
            android:id="@+id/ll_step_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            app:lineCount="4"
            app:lineHeight="@dimen/dp_2"
            app:linePadding="@dimen/dp_4"
            app:lineSelectBgColor="@color/yellowd2"
            app:lineUnSelectAlpha="0.3"
            app:lineWidth="@dimen/dp_12"
            app:selectIndex="1">

        </net.mfinance.commonlib.view.LineStepView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_16"
                        android:text="@string/asa_pls_account"
                        android:textColor="@color/gray1e"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_account_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/btn_icon_help"
                        android:drawablePadding="@dimen/dp_6"
                        android:padding="@dimen/dp_16"
                        android:text="@string/asa_account_desc"
                        android:textColor="@color/gray68"
                        android:textSize="@dimen/sp_14">

                    </TextView>

                </RelativeLayout>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_createAccType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/asa_account"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_left_title"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:text="@string/asa_stock_market"
                        android:textColor="@color/gray68"
                        android:textSize="@dimen/sp_14">

                    </TextView>

                    <CheckBox
                        android:id="@+id/cbx_createAccStockHk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_cbx_yellow"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:text="@string/asa_hk_stock"
                        android:textColor="@color/gray68"
                        android:textSize="@dimen/sp_14">

                    </CheckBox>

                    <CheckBox
                        android:id="@+id/cbx_createAccStockUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_cbx_yellow"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:text="@string/asa_am_stock"
                        android:textColor="@color/gray68"
                        android:textSize="@dimen/sp_14">

                    </CheckBox>

                    <CheckBox
                        android:id="@+id/cbx_createAccStockA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_cbx_yellow"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:text="@string/asa_ch_stock"
                        android:textColor="@color/gray68"
                        android:textSize="@dimen/sp_14">

                    </CheckBox>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_16"
                    android:text="@string/asa_taxation"
                    android:textColor="@color/gray1e"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_taxInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/asa_taxation_info"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_taxRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/asa_country_area"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_taxTin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="true"
                    app:isVisibilityGoto="false"
                    app:txtLeft="@string/asa_taxation_code"
                    app:txtRightHint="@string/asa_input_taxation_code">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/asa_taxation_desc"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_16"
                    android:text="W-8BEN"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <com.mfinance.everjoy.everjoy.view.AccountEditorInfoView
                    android:id="@+id/ll_w8_country_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isEditor="false"
                    app:isVisibilityGoto="true"
                    app:txtLeft="@string/asa_country_area"
                    app:txtRightHint="@string/sec_acc_ui_select">

                </com.mfinance.everjoy.everjoy.view.AccountEditorInfoView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/asa_country_taxation"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </TextView>

                <CheckBox
                    android:id="@+id/cbx_desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_cbx_yellow"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/asa_desc_cbx1"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </CheckBox>

                <CheckBox
                    android:id="@+id/cbx_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_cbx_yellow"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/asa_desc_cbx2"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </CheckBox>


                <CheckBox
                    android:id="@+id/cbx_desc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_cbx_yellow"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/asa_desc_cbx3"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </CheckBox>

                <CheckBox
                    android:id="@+id/cbx_desc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_cbx_yellow"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/asa_desc_cbx4"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </CheckBox>

                <CheckBox
                    android:id="@+id/cbx_desc5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_cbx_yellow"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/asa_desc_cbx5"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </CheckBox>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_prev"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellowfa_corner24"
                    android:gravity="center"
                    android:text="@string/ui_prev"
                    android:textColor="@color/yellowd2"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:background="@drawable/bg_yellowd2_corner24"
                    android:gravity="center"
                    android:text="@string/sec_acc_ui_next"
                    android:textColor="@color/whiteff"
                    android:textSize="@dimen/sp_16">

                </TextView>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/sec_acc_ui_contact"
                android:textColor="@color/gray68"
                android:textSize="@dimen/sp_14">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>