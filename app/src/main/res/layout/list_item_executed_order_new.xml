<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent"
	android:id="@+id/llOrder" android:gravity="center_vertical" android:paddingRight="5dp" android:paddingLeft="5dp" 
	android:background="@drawable/list_row_odd">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:gravity="center_vertical"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/ivBuy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginBottom="4dp"
				android:src="@drawable/ico_buy"></ImageView>

			<TextView
				android:id="@+id/lbContract"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginLeft="2dp"
				android:text="-"
				android:textColor="@android:color/white"
				android:textSize="16sp"></TextView>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/LinearLayout01"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/lbExecutedDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="-"
				android:textColor="@android:color/white"></TextView>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll3"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1">

		<TextView
			android:id="@+id/lbLimit"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center_vertical|center"
			android:paddingLeft="2dp"
			android:text="--"
			android:textColor="@android:color/white"/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1">

		<TextView
			android:id="@+id/vtRequestTime"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center_vertical|center"
			android:paddingLeft="2dp"
			android:text="--"
			android:textColor="@android:color/white"/>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="4dp"
			android:layout_weight="1"
			android:gravity="bottom"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/ivLiq"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:scaleType="fitEnd"
				android:src="@drawable/ico_liq"></ImageView>

			<ImageView
				android:id="@+id/ivOco"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:scaleType="fitEnd"
				android:src="@drawable/ico_oco"></ImageView>
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="right|center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/lbReqPrice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:text="--"
				android:textColor="@android:color/white"></TextView>
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>