<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:text="@string/str_account"
            android:textColor="@color/gray00"
            android:textSize="@dimen/sp_16">

        </TextView>

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_msg"
            android:paddingRight="@dimen/dp_16"
            android:src="@drawable/ic_setting">

        </ImageView>

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_16"
            android:src="@drawable/ic_email">

        </ImageView>


    </RelativeLayout>

    <View style="@style/ViewLine">

    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:drawablePadding="@dimen/dp_8"
                android:text="@string/str_success_register"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_24">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_whiteea_frame"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_40"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_40"
                        android:drawableLeft="@mipmap/ic_launcher_round"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:text="@string/str_identity_doc"
                        android:textColor="@color/gray00"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_8"
                        android:drawableLeft="@mipmap/ic_launcher_round"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:text="@string/str_address_doc"
                        android:textColor="@color/gray00"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_8"
                        android:drawableLeft="@mipmap/ic_launcher_round"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:text="@string/str_bank_card"
                        android:textColor="@color/gray00"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8">

                        <ImageView
                            android:id="@+id/iv_passport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_launcher_round">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_toRightOf="@+id/iv_passport"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="@string/str_bank_card"
                                android:textColor="@color/gray00"
                                android:textSize="@dimen/sp_16">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="@string/str_passport_desc"
                                android:textColor="@color/gray66"
                                android:textSize="@dimen/sp_13">

                            </TextView>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_8"
                    android:background="@color/whiteff"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/str_opening_securities"
                    android:textColor="@color/gray00"
                    android:textSize="@dimen/sp_16">

                </TextView>

            </RelativeLayout>

            <CheckBox
                android:id="@+id/cbx_read_account_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_read_account_file"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

            <CheckBox
                android:id="@+id/cbx_not_american"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_not_american"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

            <CheckBox
                android:id="@+id/cbx_not_hk_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_not_hk_employee"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

            <CheckBox
                android:id="@+id/cbx_not_company_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_not_company_employee"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

            <CheckBox
                android:id="@+id/cbx_not_everjoy_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_not_everjoy_relationship"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

            <CheckBox
                android:id="@+id/cbx_not_other_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_not_other_account"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

            <CheckBox
                android:id="@+id/cbx_not_government"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_not_government"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

            <CheckBox
                android:id="@+id/cbx_not_bankruptcy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/str_not_bankruptcy"
                android:textColor="@color/gray00"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical">

            </CheckBox>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/bg_yellowd2_corner24"
        android:gravity="center"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:text="@string/str_open_account"
        android:textColor="@color/whiteff"
        android:textSize="@dimen/sp_14">

    </TextView>

</LinearLayout>