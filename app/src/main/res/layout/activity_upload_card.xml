<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_signup">

    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:src="@drawable/ic_gray33_left_back11">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/sec_acc_ui_title"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_18">

        </TextView>

    </RelativeLayout>

    <com.mfinance.everjoy.everjoy.view.AccountStepView
        android:id="@+id/ll_account_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

    </com.mfinance.everjoy.everjoy.view.AccountStepView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_next"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@+id/ll_account_step"
        android:background="@drawable/bg_whiteff_top_corner24"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_16"
            android:text="@string/auc_card_upload"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_16">

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_16">

                <LinearLayout
                    android:id="@+id/ll_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_16"
                        android:text="@string/recg_ui_front"
                        android:textColor="@color/gray1e"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <ImageView
                        android:id="@+id/iv_card_front"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:scaleType="fitXY"
                        android:src="@mipmap/btn_idcard_font">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_16"
                        android:text="@string/recg_ui_background"
                        android:textColor="@color/gray1e"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <ImageView
                        android:id="@+id/iv_card_background"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/btn_idcard_back">

                    </ImageView>

                </LinearLayout>

                <!--                其他-->
                <LinearLayout
                    android:id="@+id/ll_other_passport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_16"
                        android:text="@string/auc_passport2"
                        android:textColor="@color/gray1e"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <ImageView
                        android:id="@+id/iv_other_passport"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/btn_idcard_back">

                    </ImageView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:text="@string/auc_address_desc"
                    android:textColor="@color/gray1e"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <ImageView
                    android:id="@+id/iv_address_desc"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/btn_idcard_back">

                </ImageView>

                <LinearLayout
                    android:id="@+id/ll_ch_passport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_16"
                        android:text="@string/auc_passport1"
                        android:textColor="@color/gray1e"
                        android:textSize="@dimen/sp_16">

                    </TextView>

                    <ImageView
                        android:id="@+id/iv_passport"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/btn_idcard_back">

                    </ImageView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteff"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_prev"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@drawable/bg_yellowfa_corner24"
                android:gravity="center"
                android:text="@string/ui_prev"
                android:textColor="@color/yellowd2"
                android:textSize="@dimen/sp_16">

            </TextView>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="@drawable/bg_yellowd2_corner24"
                android:gravity="center"
                android:text="@string/sec_acc_ui_next"
                android:textColor="@color/whiteff"
                android:textSize="@dimen/sp_16">

            </TextView>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/sec_acc_ui_contact"
            android:textColor="@color/gray68"
            android:textSize="@dimen/sp_14">

        </TextView>

    </LinearLayout>


</RelativeLayout>