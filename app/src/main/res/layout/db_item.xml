<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <Button
        android:id="@+id/btnItem"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:background="@drawable/db_price"
        android:elevation="0dp" >
    </Button>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/btnItem"
        android:layout_alignRight="@+id/btnItem"
        android:layout_below="@+id/btnItem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-43dp"
        android:elevation="3dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.5"
        android:singleLine="false"
        android:text="Pending Order Listing"
        android:textColor="@color/db_item"
        android:textSize="10.5dp"
        android:textStyle="bold" >
    </TextView>

</RelativeLayout>