<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAccount"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-470dp"
    android:clickable="false">

    <ImageView
        android:id="@+id/bg_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.7"
        android:scaleType="fitXY"
        android:src="@drawable/bg_login" />

    <LinearLayout
        android:id="@+id/llAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/main_account_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">
        <GridLayout
            android:layout_gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:useDefaultMargins="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/lbAccount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_account"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/lbAccount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lb_account_name"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />

                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvAccName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/lbBalance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_balance"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvBalance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/txt_realized_pnl"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvRealizedPNL"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_own_equity"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvOwnEquity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_floating_pl"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvFloating"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_margin_requirement"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvInitialMargin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_effective_margin"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvEffectiveMargin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_usable_margin"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvUsableMargin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_margin_call_amount"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvCallMarginAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_magin_tradable"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvTradableMargin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_magin_non_tradable"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvNonTradableMargin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewCredit"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_credit"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvCredit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewCreditLimitNonTradable"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_credit_non_tradable"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvCreditLimitNonTradable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewFreeLot"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/txt_free_lot"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvFreeLot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/lbEquity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/lb_equity"
                    android:textColor="@color/normal_text"
                    android:textSize="10sp" />
                <com.mfinance.everjoy.app.widget.FontFitTextView
                    android:id="@+id/tvEquity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/btn_1"
                    android:textSize="15sp" />
            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:id="@+id/viewMarginLevel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/lb_buy_power"
                android:textColor="@color/normal_text"
                android:textSize="10sp"/>

            <ProgressBar
                android:id="@+id/pbRate"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />

            <com.mfinance.everjoy.app.widget.FontFitTextView
                android:id="@+id/tvBuyPower"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="-%"
                android:textColor="@color/normal_text"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/btn_statement"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_statement"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="35dp"
                                android:paddingRight="2dp"
                                android:paddingLeft="2dp"
                                android:src="@drawable/icon_statement"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="115dp"
                                android:layout_height="35dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/nav_online_statement"
                                android:textColor="@android:color/black"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <ImageButton
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_logout"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="45dp"
                                android:layout_height="35dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:src="@drawable/icon_logout"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="115dp"
                                android:layout_height="35dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/btn_logout"
                                android:textColor="@android:color/black"
                                android:textSize="16dp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/btnAccUp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/llAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:src="@drawable/main_account_up_btn"/>

    <ImageView
        android:id="@+id/btnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-4dp"
        android:src="@drawable/btn_down"
        android:visibility="invisible" />


</RelativeLayout>