<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:text="@string/str_register"
            android:textColor="@color/gray00"
            android:textSize="@dimen/sp_24">

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_newpwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="@string/str_login_pwd"
                android:textColor="@color/gray33"
                android:textColorHint="@color/gray99"
                android:textSize="@dimen/sp_16">


            </EditText>

            <ImageView
                android:id="@+id/iv_show_newpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/bg_selector_show_pwd">

            </ImageView>

        </LinearLayout>

        <View
            style="@style/ViewLine"
            android:layout_marginTop="@dimen/dp_6">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_define_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="@string/str_define_login_pwd"
                android:textColor="@color/gray33"
                android:textColorHint="@color/gray99"
                android:textSize="@dimen/sp_16">


            </EditText>

            <ImageView
                android:id="@+id/iv_show_definepwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/bg_selector_show_pwd">

            </ImageView>

        </LinearLayout>


        <View
            style="@style/ViewLine"
            android:layout_marginTop="@dimen/dp_6">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_16"
            android:text="@string/str_login_pwd_rule"
            android:textColor="@color/gray66"
            android:textSize="@dimen/sp_13">

        </TextView>

        <TextView
            android:id="@+id/tv_subimt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_yellowd2_corner24"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/str_submit"
            android:textColor="@color/whiteff"
            android:textSize="@dimen/sp_14">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_01"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/gray99">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="@string/str_quick_register"
                android:textColor="@color/gray99"
                android:textSize="@dimen/sp_14">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_01"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@color/gray99">

            </View>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/icon_fb">

            </ImageView>


            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/icon_twitter">

            </ImageView>


            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/icon_wechat">

            </ImageView>

            <ImageView
                android:id="@+id/iv_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/icon_weibo">

            </ImageView>

            <ImageView
                android:id="@+id/iv_ig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/icon_ig">

            </ImageView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>