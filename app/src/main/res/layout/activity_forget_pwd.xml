<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_sign">

    </ImageView>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@drawable/ic_gray33_left_back11">

    </ImageView>

    <TextView
        android:id="@+id/tv_verif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:padding="@dimen/dp_16"
        android:text="@string/str_forget_pwd2"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_32"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_verif_title"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/str_send_code_email"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>


    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_tips"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@null"
        android:hint="@string/toast_input_email"
        android:inputType="textEmailAddress"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="@color/gray1e"
        android:textColorHint="@color/gray99"
        android:textSize="@dimen/sp_16">

    </EditText>

    <View
        android:id="@+id/view_line"
        style="@style/ViewLine"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_below="@+id/et_email"
        android:layout_marginRight="@dimen/dp_16">

    </View>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/view_line"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/bg_yellowd2_corner24"
        android:gravity="center"
        android:text="@string/str_submit"
        android:textColor="@color/whiteff"
        android:textSize="@dimen/sp_16">

    </TextView>

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/sec_acc_ui_contact"
        android:textColor="@color/gray68"
        android:textSize="@dimen/sp_14">

    </TextView>

</RelativeLayout>