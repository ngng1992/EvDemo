<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_signup">

    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:src="@drawable/ic_gray33_left_back11">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="@string/sec_acc_ui_title"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_18">

        </TextView>

    </RelativeLayout>

    <com.mfinance.everjoy.everjoy.view.AccountStepView
        android:id="@+id/ll_account_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal"
        app:selectIndex="3">

    </com.mfinance.everjoy.everjoy.view.AccountStepView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_account_step"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_whiteff_top_corner24"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/asa_explanation"
                android:textColor="@color/gray1e"
                android:textSize="@dimen/sp_16">

            </TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_risk_statement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="协议说明，文字描述"
                    android:textColor="@color/gray68"
                    android:textSize="@dimen/sp_14">

                </TextView>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asa_autograph"
                android:textColor="@color/gray1e"
                android:textSize="@dimen/sp_16">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_8"
                android:text="@string/asa_self_define"
                android:textColor="@color/gray68"
                android:textSize="@dimen/sp_14">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/asa_input_auto"
                android:textColor="@color/gray1e"
                android:textSize="@dimen/sp_16">

            </TextView>

            <TextView
                android:id="@+id/tv_username_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/asa_input_auto_name"
                android:textColor="@color/gray68"
                android:textSize="@dimen/sp_14">

            </TextView>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:padding="@dimen/dp_12"
                android:background="@drawable/bg_whitee3_frame_corner4"
                android:text=""
                android:textColor="@color/gray1e"
                android:textSize="@dimen/sp_16">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_prev"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellowfa_corner24"
                    android:gravity="center"
                    android:text="@string/ui_prev"
                    android:textColor="@color/yellowd2"
                    android:textSize="@dimen/sp_16">

                </TextView>

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:background="@drawable/bg_yellowd2_corner24"
                    android:gravity="center"
                    android:text="@string/sec_acc_ui_next"
                    android:textColor="@color/whiteff"
                    android:textSize="@dimen/sp_16">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/sec_acc_ui_contact"
                android:textColor="@color/gray68"
                android:textSize="@dimen/sp_14">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>