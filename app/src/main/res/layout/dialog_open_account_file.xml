<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:padding="@dimen/dp_16"
            android:text="@string/str_agreement_file"
            android:textColor="@color/gray1e"
            android:textSize="@dimen/sp_18">

        </TextView>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:padding="@dimen/dp_16"
            android:src="@mipmap/btn_close">

        </ImageView>

    </RelativeLayout>

    <View
        style="@style/ViewLine"
        android:layout_marginTop="@dimen/dp_16">

    </View>

    <TextView
        android:id="@+id/tv_file1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/str_client_agreement"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>

    <View style="@style/ViewLine">

    </View>

    <TextView
        android:id="@+id/tv_file2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/str_terms"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>

    <View style="@style/ViewLine">

    </View>

    <TextView
        android:id="@+id/tv_file3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/str_north_trade"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>

    <View style="@style/ViewLine">

    </View>

    <TextView
        android:id="@+id/tv_file4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/str_american_trade"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>

    <View style="@style/ViewLine">

    </View>

    <TextView
        android:id="@+id/tv_file5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/str_aeoi"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>

    <View style="@style/ViewLine">

    </View>

    <TextView
        android:id="@+id/tv_file6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/str_price_standard"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>

    <View style="@style/ViewLine">

    </View>

    <TextView
        android:id="@+id/tv_file7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="@string/str_change_lan"
        android:textColor="@color/gray1e"
        android:textSize="@dimen/sp_16">

    </TextView>

    <View style="@style/ViewLine">

    </View>

</LinearLayout>