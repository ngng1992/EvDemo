<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rlSystemMessage" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="#000000">
	<TextView android:text="@+id/TextView01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/tvMsgTime" android:textColor="@color/normal_text"></TextView>
	<TextView android:layout_height="wrap_content"
		android:layout_below="@+id/tvMsgTime" android:text="@+id/tvContent"
		android:layout_width="fill_parent" android:id="@+id/tvMsgContent" android:textColor="@color/normal_text"></TextView>
</RelativeLayout>