<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rlPop" android:layout_height="wrap_content"
	android:layout_width="wrap_content" android:background="@drawable/pop_transparent">


	<RelativeLayout android:layout_height="wrap_content"
		android:id="@+id/RelativeLayout01" android:layout_below="@+id/llContent"
		android:layout_centerInParent="true" android:paddingTop="40dp"
		android:layout_width="200dp">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/normal_text"
			android:id="@+id/tvTitle" android:layout_centerHorizontal="true"
			android:text="@string/lb_select" android:textSize="14dp"></TextView>
		<LinearLayout android:background="@drawable/pop_bg"
			android:layout_height="150dp" android:id="@+id/llContent"
			android:layout_below="@+id/tvTitle" android:layout_width="180dp"
			android:layout_centerHorizontal="true" android:padding="5dp">

				<com.mfinance.everjoy.app.widget.wheel.WheelView android:id="@+id/p1"
				android:layout_width="wrap_content" android:layout_weight="1"
				android:layout_height="fill_parent" />
				<com.mfinance.everjoy.app.widget.wheel.WheelView android:id="@+id/p2"
				android:layout_width="wrap_content" android:layout_weight="1"
				android:layout_height="fill_parent" />
				<com.mfinance.everjoy.app.widget.wheel.WheelView android:id="@+id/p3"
				android:layout_width="wrap_content" android:layout_weight="1"
				android:layout_height="fill_parent" />

		</LinearLayout>

		<Button
			android:id="@+id/btnPopCommit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/llContent"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="5dp"
			android:background="@drawable/btn_normal"
			android:text="@string/btn_submit"
			android:textColor="@color/normal_text"></Button>

		<Button
			android:id="@+id/btnClose"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignParentRight="true"
			android:layout_marginTop="3dp"
			android:background="@drawable/icon_close"></Button>
	</RelativeLayout>
</RelativeLayout>