<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray1e"
            android:padding="@dimen/dp_16"
            android:text="@string/cancel">

        </TextView>

        <TextView
            android:id="@+id/tv_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray1e"
            android:padding="@dimen/dp_16"
            android:text="@string/define">

        </TextView>

    </RelativeLayout>

    <top.defaults.view.DateTimePickerView
        android:id="@+id/datePickerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemHeight="@dimen/dp_40"
        app:preferredMaxOffsetItemCount="3"
        app:textColor="@color/gray1e"
        app:textSize="@dimen/sp_16" />

</LinearLayout>